<?xml version="1.0" encoding="UTF-8" ?>
<c2effect>
	<!-- About -->
	<id>seascape</id>			<!-- A unique ID.  Change this!  Never change the ID after release - change the name instead. -->
	<name>Sea Scape Fx</name>		<!-- The displayed name of the effect -->
	<category>Animated FX</category>	<!-- Any category can be used, but try to use one of: Color, Blend, or Distortion -->
	<description>Sea Scape From TDM</description>
	<author>Gigatron</author>
	
	<!-- Settings -->
	
	<!-- Extend the bounding box for effect processing by a number of pixels to show the edges
		 of effects which go beyond the object edges, e.g. blur and warp.
		 Do not set if not strictly necessay!  These options have a performance impact. -->
	<extend-box-horizontal>0</extend-box-horizontal>
	<extend-box-vertical>0</extend-box-vertical>
	
	<!-- Set to true if the background is sampled (see comments on background sampling in the .fx file) -->
	<blends-background>false</blends-background>
	
	<!-- Set to true if the background is not sampled at 1:1 with the foreground (e.g. the
		 background texture co-ordinates are modified in some way by the shader, as done
		 by Glass and Lens) -->
	<cross-sampling>false</cross-sampling>
	
	<!-- Set to true if the effect changes by itself over time, e.g. Noise or Warp effects. -->
	<animated>true</animated>
	
	<!-- Parameters -->
	<parameters>
	
	<param>
			<name>Horizon X</name>
			<description>Horizon X</description>
			<type>float</type>
			<initial>0.0</initial>
			<uniform>xx</uniform>
		</param>
	
	<param>
			<name>Horizon Y</name>
			<description>Horizon Y</description>
			<type>float</type>
			<initial>-0.4</initial>
			<uniform>yy</uniform>
		</param>
	<param>
			<name>Frequency</name>
			<description>Wave Frequency</description>
			<type>float</type>
			<initial>0.16</initial>
			<uniform>SEA_FREQ</uniform>
		</param>
	<param>
			<name>Sea Height</name>
			<description>Sea Height Factor</description>
			<type>float</type>
			<initial>0.6</initial>
			<uniform>SEA_HEIGHT</uniform>
		</param>
	<param>
			<name>Sea Choppy</name>
			<description>Sea Choppy Factor</description>
			<type>float</type>
			<initial>4.0</initial>
			<uniform>SEA_CHOPPY</uniform>
		</param>
	<param>
			<name>Sea Speed</name>
			<description>Sea Speed Factor</description>
			<type>float</type>
			<initial>2.0</initial>
			<uniform>SEA_SPEED</uniform>
		</param>

	<param>
			<name>Sea Base Red</name>
			<description>Sea Base Red Color Component</description>
			<type>float</type>
			<initial>0.1</initial>
			<uniform>sbred</uniform>
		</param>	
	<param>
			<name>Sea Base Green</name>
			<description>Sea Base Green Color Component</description>
			<type>float</type>
			<initial>0.19</initial>
			<uniform>sbgreen</uniform>
		</param>
    <param>
			<name>Sea Base Blue</name>
			<description>Sea Base Blue Color Component</description>
			<type>float</type>
			<initial>0.22</initial>
			<uniform>sbblue</uniform>
		</param>

	<param>
			<name>Sea Water Red</name>
			<description>Sea Water Red Color Component</description>
			<type>float</type>
			<initial>0.8</initial>
			<uniform>swred</uniform>
		</param>	
	<param>
			<name>Sea Water Green</name>
			<description>Sea Water Green Color Component</description>
			<type>float</type>
			<initial>0.9</initial>
			<uniform>swgreen</uniform>
		</param>
    <param>
			<name>Sea Water Blue</name>
			<description>Sea Water Blue Color Component</description>
			<type>float</type>
			<initial>0.6</initial>
			<uniform>swblue</uniform>
		</param>
	<param>
			<name>Movement Speed</name>
			<description>Movement Speed </description>
			<type>float</type>
			<initial>5.0</initial>
			<uniform>mspeed</uniform>
		</param>
		
			 
	</parameters>
	
</c2effect>
